package:
  name: genomicbasedclassification  # Keep name clean, let version be separate
  version: "1.0"

source:
  path: .

build:
  script: |
    mkdir -p "$PREFIX/bin"
    cp "$RECIPE_DIR/GenomicBasedClassification_1.0.py" "$PREFIX/bin/genomicbasedclassification"
    chmod +x "$PREFIX/bin/genomicbasedclassification"

requirements:
  host:
    - python=3.12.2
  run:
    - python=3.12.2
    - pandas=2.2.2
    - imbalanced-learn=0.13.0
    - scikit-learn=1.5.2
    - xgboost=2.1.3
    - numpy=1.26.4
    - tqdm=4.67.1

about:
  summary: "Script performing classification-based modeling or prediction from genomic data"
  license: "GPL-3.0"

extra:
  recipe-maintainers:
    - Nicolas-Radomski
    
test:
  commands:
    - python -c "import pandas; import numpy; print('Test successful')"
    - genomicbasedclassification_1.0 --help
